# eVote Simple - Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME="eVote Simple"
APP_ENV=local
APP_DEBUG=true
APP_PORT=80

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=evote_simple
DB_USERNAME=sail
DB_PASSWORD=password

# Database Ports (for external access)
FORWARD_DB_PORT=3306

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
FORWARD_REDIS_PORT=6379

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@evote-simple.local"
MAIL_FROM_NAME="${APP_NAME}"

# Mailpit Ports
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025

# Security Settings (CHANGE IN PRODUCTION!)
APP_KEY=base64:your-app-key-here
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Voting System Configuration
VOTING_ENABLED=true
RESULTS_PUBLIC=true
AUDIT_LOGGING=true

# Production Security (Enable in production)
# FORCE_HTTPS=true
# SESSION_SECURE_COOKIE=true
# HSTS_ENABLED=true